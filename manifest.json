{
    "name": "Ez Link",
    "manifest_version": 3,
    "version": "1.0.0",
    "default_locale": "en",
    "description" : "A simple extension to launch URLs with single click including POST,PATCH,DELETE types as well",
    "icons": {
        "16":  "icons/icon16.png",
        "32":  "icons/icon32.png",
        "48":  "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "js/background-bundle.js",
        "type": "module"
    },
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "views/popup.html"
    }
}